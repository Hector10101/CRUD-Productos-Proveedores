
@{
    ViewData["Title"] = "EliminarProveedor";
}

<h1>Eliminar Proveedor</h1>

<a class="alert-link" asp-action="AgregarProveedor">¿Quieres agregar un proveedor?</a>
<br />
<br />
<div class="col-6 formulario">
    <form method="post" role="form">
        <div class="form-group">
            <h5>ID</h5>
            <input id="ID" value="@ViewData["ID"]" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <h5>Nombre</h5>
            <input value="@ViewData["Nombre"]" class="form-control" readonly/>
        </div>
        <div class="form-group">
            <h5>Descripcion</h5>
            <textarea value="" class="form-control" rows="3" readonly>@ViewData["Direccion"]</textarea>
        </div>
        <div class="form-group">
            <h5>Telefono</h5>
            <input value="@ViewData["Telefono"]" class="form-control" readonly/>
        </div>

        <button type="submit" class="btn btn-danger">Eliminar</button>
        <button class="btn btn-primary" asp-action="ModificarProveedores">Ir a Modificacion</button>
    </form>
</div>