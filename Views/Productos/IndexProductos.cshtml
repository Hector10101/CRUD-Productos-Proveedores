@{
    ViewData["Title"] = "Productos";
}

<h1 class="">Productos</h1>
<hr />
<div class="container text-center">
    <br />
    <br />
    <br />
    <br />

    <div class="text-center  form-group row">
        <div class="col-4">
            <div class="Contenedores">
                <h4>Agregar un nuevo Producto</h4>
                <br />
                <p class="font-italic">Descripcion...</p>
                <br />
                <a class="btn btn-primary" asp-controller="Productos" asp-action="AgregarProducto">Agregar</a>
            </div>

        </div>
        <div class="col-4">
            <div class="Contenedores">
                <h4>Editar/Eliminar un Producto</h4>
                <br />
                <p class="font-italic">Descripcion...</p>
                <br />
                <a class="btn btn-primary" asp-controller="Productos" asp-action="ModificarProductos">Editar/Eliminar</a>
            </div>

        </div>
        <div class="col-4">
            <div class="Contenedores Contenedor3">
                <h4>Ver Productos</h4>
                <br />
                <br />
                <p class="font-italic">Descripcion...</p>
                <br />
                <a class="btn btn-primary" asp-controller="Productos" asp-action="VerProductos">Ver</a>
            </div>

        </div>
    </div>
</div>

<style>
    .Contenedores {
        padding: 40px 20px;
        border-radius: 2%;
        background-color: #E6E6E6;
    }
    .Contenedor3 {
        padding: 42px 20px;
    }
</style>